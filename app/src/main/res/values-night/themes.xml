<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickAndMortyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_200</item>
        <item name="colorPrimaryVariant">@color/yellow_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="titleToolbarTextColor">@color/white_gray</item>
        <item name="popupThemeOverlay">@style/ThemeOverlay.AppCompat.Light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CardDefaultStyle">
        <item name="cardBackgroundColor">@color/still_black</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="OpenedWindowStyle">
        <item name="android:background">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white_gray</item>
    </style>

    <style name="MainWindowTextStyle">
        <item name="android:textColor">@color/white_gray</item>
    </style>

    <style name="titleCharacterStyle">
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>